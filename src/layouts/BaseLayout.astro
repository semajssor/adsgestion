---
import "../styles/global.scss";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props {
	title: string;
	description?: string;
}

const {
	title = "ADS Gestion Financi√®re",
	description = "Votre partenaire financier pour travailleurs autonomes.",
} = Astro.props;
---

<!doctype html>
<html lang="fr">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="theme-color" content="#1b3c53" />
		<link rel="icon" type="image/png" href="/favicon_ADS.png" />

		<title>{title}</title>
		<meta name="description" content={description} />
	</head>
	<body class="layout">
		<Header />
		<main class="content">
		<slot />
		</main>
		<Footer />
	</body>
</html>
